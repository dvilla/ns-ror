<%- if @book %>
  $("#book_isbn").val("<%=j @book.isbn unless @book.isbn.nil? %>");
  $("#book_title").val("<%=j @book.title unless @book.title.nil? %>");
  $("#book_publisher").val("<%=j @book.publisher unless @book.publisher.nil? %>");
  $("#book_description").val("<%=j @book.description.html_safe unless @book.description.nil? %>");
  $("#book_authors").val("<%=j @book.authors() unless @book.authors.nil? %>");
<%- end %>
