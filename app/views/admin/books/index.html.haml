- if notice
  = notice

%h1 Listing books

- if @books
  %table.table.table-striped
    %thead
      %tr
        %th ISBN
        %th Title
        %th Description
        %th Publisher
        %th Authors
        %th
        %th

    %tbody
      - @books.each do |book|
        %tr
          %td= book.isbn 
          %td= book.title
          %td= book.description 
          %td= book.publisher.name
          - book.authors.each do |a|
            %td= a.name 
          %td= link_to 'Show', [:admin, book], class: 'btn'
          %td= link_to 'Edit', edit_admin_book_path(book), class: 'btn'
          %td= link_to 'Delete', [:admin, book], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn'
- else
  .alert.alert-block
    %h4 Empty list
    %p You need to add some books

%br

= link_to content_tag(:i, '', class: 'icon-plus') + ' New Book', new_admin_book_path, class: 'btn'
