= form_for([:admin, @book], html: { class: 'form-horizontal' }) do |f|
  - if @book.errors.any?
    .error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited this book from being saved:

      %ul
      - @book.errors.full_messages.each do |msg|
        = msg

  .control-group
    .input-append
      = f.label :isbn
      = f.text_field :isbn
      =link_to content_tag(:i, '', class: 'icon-search'), '#', class: 'btn search_gbook', remote: true

  .control-group
    = f.label :title
    = f.text_field :title

  .control-group
    = f.label :publisher
    = f.text_field :publisher

  .control-group
    = f.label :description
    = f.text_area :description

  .control-group
    = f.label :authors
    = f.text_field :authors

  .controls
    = f.submit 'Save', class: 'btn'
