= form_for(@book) do |f|
  - if @book.errors.any?
    .error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited this book from being saved:

      %ul
      - @book.errors.full_messages.each do |msg|
        = msg

  = f.label :title
  = f.text_field :title

  = f.label :isbn
  = f.text_field :isbn

  = f.label :publisher
  = f.text_field :publisher

  = f.label :description
  = f.text_area :description

  = f.label :authors
  = f.text_field :authors

  .actions
    = f.submit 'Save'
